<div class="navbar">
  <nav>
    <div class="nav-left">
      <h1>Vitor Miura</h1>
      <ul>
        <a href="/"><li>about</li></a>
        <a href="/blog"><li>blog</li></a>
        <a href="/portfolio"><li>portfolio</li></a>
      </ul>
    </div>
    <div class="theme-selector">
      <select id="theme-select" aria-label="Select theme">
        <option value="dark">Dark</option>
        <option value="light">Light</option>
        <option value="auto">Auto</option>
      </select>
    </div>
  </nav>
</div>
<hr/>

<script>
  const themeSelect = document.getElementById('theme-select') as HTMLSelectElement | null;
  const themeLink = document.getElementById('water-theme') as HTMLLinkElement | null;
  
  // Obter tema atual
  let currentTheme = localStorage.getItem('theme') || 'dark';
  
  // Definir o tema no select
  if (themeSelect) {
    themeSelect.value = currentTheme;
  }
  
  // Aplicar tema baseado na seleção
  function applyTheme(theme: string) {
    if (!themeLink) return;
    
    if (theme === 'auto') {
      // Detectar preferência do sistema
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      const autoTheme = prefersDark ? 'dark' : 'light';
      themeLink.href = `https://cdn.jsdelivr.net/npm/water.css@2/out/${autoTheme}.css`;
    } else {
      themeLink.href = `https://cdn.jsdelivr.net/npm/water.css@2/out/${theme}.css`;
    }
  }
  
  // Aplicar tema inicial
  applyTheme(currentTheme);
  
  // Listener para mudanças no select
  if (themeSelect) {
    themeSelect.addEventListener('change', (e) => {
      const target = e.target as HTMLSelectElement;
      const selectedTheme = target.value;
      localStorage.setItem('theme', selectedTheme);
      applyTheme(selectedTheme);
    });
  }
  
  // Listener para mudanças na preferência do sistema (quando auto está selecionado)
  window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
    if (themeSelect && themeSelect.value === 'auto') {
      applyTheme('auto');
    }
  });
</script>



<style>
